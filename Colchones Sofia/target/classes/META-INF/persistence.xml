<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
        
	<persistence-unit name="colchones">
		<class>com.entity.Carrusel</class>
		<class>com.entity.Categoria</class>
		<class>com.entity.Cliente</class>
		<class>com.entity.Compra</class>
		<class>com.entity.DetalleCompra</class>
		<class>com.entity.DetalleProducto</class>
		<class>com.entity.DetalleVenta</class>
		<class>com.entity.DevolucionGarantia</class>
		<class>com.entity.Email</class>
		<class>com.entity.EstadoVenta</class>
		<class>com.entity.Global</class>
		<class>com.entity.HistorialPresupuesto</class>
		<class>com.entity.Persona</class>
		<class>com.entity.Producto</class>
		<class>com.entity.Proveedor</class>
		<class>com.entity.ProveedorProducto</class>
		<class>com.entity.Rol</class>
		<class>com.entity.Telefono</class>
		<class>com.entity.TipoBanco</class>
		<class>com.entity.TipoDocumento</class>
		<class>com.entity.TipoPago</class>
		<class>com.entity.Usuario</class>
		<class>com.entity.Vendedor</class>
		<class>com.entity.Venta</class>
		<!--        --> 
		<!-- Tables -->
		<!--        -->
		
		<!--            -->
		<!-- Properties -->
		<!--            -->
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/colchones?zeroDateTimeBehavior=convertToNull" />

			<property name="javax.persistence.jdbc.user" value="root" />

			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.jdbc.Driver" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MariaDB53Dialect" />

			<!--            -->
			<!-- DB Dialect -->
			<!--            -->
			<property name="hibernate.show_sql" value="true" />

			<!--                     -->
			<!-- Show SQL in console -->
			<!--                     -->
			<property name="hibernate.format_sql" value="true" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="none" />
		</properties>
		
	</persistence-unit>
</persistence>
